@model BestService.Web.ViewModels.Companies.CompanyViewModel
@{
    ViewData["Title"] = "List Of All Companies";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">@ViewData["Title"]</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a asp-controller="Companies" asp-action="GetList">Companies <i class="ion-ios-arrow-forward"></i></a></span></p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        @foreach (var company in Model.Companies)
        {
            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="card card-body">
                        <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                            <div class="mr-2 mb-3 mb-lg-0"> <img src="@company.LogoImagePath" width="150" alt=""> </div>
                            <div class="media-body">
                                <h2 class="media-title font-weight-semibold"> <a asp-controller="Companies" asp-action="Details" asp-route-id="@company.Id" data-abc="true">@company.Name</a> </h2>
                                <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">@company.Category.Name</a></li>
                                </ul>
                                <div class="text-break">
                                    <p class="mb-3">@company.ShortDescription</p>
                                </div>
                                <form id="ratings" method="post"></form>
                                <ul class="list-inline list-inline-dotted mb-0">
                                    <li class="list-inline-item"><span><i class="fa fa-calendar" aria-hidden="true"></i> <time datetime="@company.CreatedOn.ToString("O")"></time> </span></li>
                                    <li class="list-inline-item">|</li>
                                    <li class="list-inline-item"><span><i class="fa fa-commenting" aria-hidden="true"></i> @company.Comments.Count  comments</span></li>
                                    <li class="list-inline-item">|</li>
                                    <li class="list-inline-item"><span><i class="fa fa-star" aria-hidden="true"></i> @company.Ratings.Count rates</span></li>
                                    <li class="list-inline-item">|</li>
                                    <li class="list-inline-item">
                                        <a href="javascript:void(0);" onclick="doRate(1,@company.Id)"><span class="fa fa-star checked"></span></a>
                                        <a href="javascript:void(0);" onclick="doRate(2,@company.Id)"><span class="fa fa-star checked"></span></a>
                                        <a href="javascript:void(0);" onclick="doRate(3,@company.Id)"><span class="fa fa-star checked"></span></a>
                                        <a href="javascript:void(0);" onclick="doRate(4,@company.Id)"><span class="fa fa-star checked"></span></a>
                                        <a href="javascript:void(0);" onclick="doRate(5,@company.Id)"><span class="fa fa-star"></span></a>
                                        <span id="@("rateValue"+company.Id)"></span>
                                    </li>
                                    <li class="list-inline-item">|</li>
                                    <li class="list-inline-item">
                                        <span class="fa icon-facebook-f"></span>
                                        <span class="fa icon-twitter"></span>
                                        <span class="fa icon-instagram"></span>
                                    </li>
                                </ul>
                            </div>
                            <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                <input id="rating-stars" type="hidden" value="@company.Rating" />
                                <h3 class="mb-0 font-weight-semibold">Rating</h3>
                                <div>
                                    <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                                        <span id="rating" class="starrating risingstar d-flex flex-row-reverse float-right list-inline-item">
                                            <span class='set'>
                                                <input id="rad5" class="rad" name="rad" type="radio">
                                                <label onclick="doRate(5,@company.Id)" for="rad5" class="star fa fa-star-o fa-lg"></label>
                                                <input id="rad4" class="rad" name="rad" type="radio">
                                                <label onclick="doRate(4,@company.Id)" for="rad4" class="star fa fa-star-o fa-lg"></label>
                                                <input id="rad3" class="rad" name="rad" type="radio">
                                                <label onclick="doRate(3,@company.Id)" for="rad3" class="star fa fa-star-o fa-lg"></label>
                                                <input id="rad2" class="rad" name="rad" type="radio">
                                                <label onclick="doRate(2,@company.Id)" for="rad2" class="star fa fa-star-o fa-lg"></label>
                                                <input id="rad1" class="rad" name="rad" type="radio">
                                                <label onclick="doRate(1,@company.Id)" for="rad1" class="star fa fa-star-o fa-lg"></label>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                                <div class="text-muted" id="rateSum">@company.Ratings.Count rates </div> <button type="button" class="btn btn-primary py-2 px-3"> View Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        @if (Model.CurrentPage == 1)
                        {
                            <li class="disabled"><a href="#">&lt;</a></li>
                        }
                        else
                        {
                            <li>
                                <a asp-route="bestServiceCompany" asp-route-page="@(Model.CurrentPage-1)">
                                    &lt;
                                </a>
                            </li>
                        }
                        @{
                            const int MorePagesToShow = 3;
                            var pagesToShow = new List<int>();
                            for (var i = 1; i <= MorePagesToShow; i++)
                            {
                                pagesToShow.Add(i);
                            }
                            for (var i = this.Model.CurrentPage - MorePagesToShow; i <= this.Model.CurrentPage + MorePagesToShow; i++)
                            {
                                if (i > 0 && i <= Model.PagesCount)
                                {
                                    pagesToShow.Add(i);
                                }
                            }
                            for (var i = this.Model.PagesCount - MorePagesToShow + 1; i <= this.Model.PagesCount; i++)
                            {
                                if (i > 0)
                                {
                                    pagesToShow.Add(i);
                                }
                            }
                            pagesToShow = pagesToShow.Where(x => x <= this.Model.PagesCount).Distinct().OrderBy(x => x).ToList();
                        }
                        @for (var i = 0; i < pagesToShow.Count; i++)
                        {
                            var pageNumber = pagesToShow[i];
                            var active = pageNumber == Model.CurrentPage ? "active" : string.Empty;
                            if (i > 0 && pageNumber - 1 != pagesToShow[i - 1])
                            {
                                <li><a asp-route="bestServiceCompany" asp-route-page="@(pagesToShow[i - 1] + 1)">...</a></li>
                            }
                            <li class="@active"><a asp-route="bestServiceCompany" asp-route-page="@pageNumber">@pageNumber</a></li>
                        }

                        @if (Model.CurrentPage == Model.PagesCount)
                        {
                            <li class="disabled"><a href="#">&gt;</a></li>
                        }
                        else
                        {
                            <li>
                                <a asp-route="bestServiceCompany"
                                   asp-route-page="@(Model.CurrentPage+1)">
                                    &gt;
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        function doRate(value, companyId) {
            var token = $("#ratings input[name=__RequestVerificationToken]").val();
            var json = { stars: value, companyId: companyId };
            console.log(value, companyId);
            $.ajax({
                url: "/api/ratings",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: { 'X-CSRF-TOKEN': token },
                success: function (data) {
                    console.log(data.companyId);
                    $('#rateValue' + data.companyId).html(data.rateValue);
                    $('#rateSum').html(data.rateSum + ' rates');
                }
            })
        }
        document.body.onload = function () {
            $("#rad" + $('#rating-stars').val()).click();
        };
    </script>
}