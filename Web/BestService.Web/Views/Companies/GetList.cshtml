@model BestService.Web.ViewModels.Companies.CompanyViewModel
@{
    ViewData["Title"] = "List Of All Companies";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">@ViewData["Title"]</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="index.html">Blog <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog Single <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>



<section class="ftco-section bg-light">
    <div class="container">
        @foreach (var company in Model.Companies)
        {
            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="card card-body">
                        <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                            <div class="mr-2 mb-3 mb-lg-0"> <img src="https://i.imgur.com/5Aqgz7o.jpg" width="150" height="150" alt=""> </div>
                            <div class="media-body">
                                <h6 class="media-title font-weight-semibold"> <a href="#" data-abc="true">@company.Name</a> </h6>
                                <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Phones</a></li>
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Mobiles</a></li>
                                </ul>
                                <p class="mb-3">@company.ShortDescription</p>
                                @foreach (var item in company.Categories)
                                {
                                    <p class="mb-3">@item.Name</p>
                                }

                                <ul class="list-inline list-inline-dotted mb-0">
                                    <li class="list-inline-item">All items from <a href="#" data-abc="true">Mobile point</a></li>
                                    <li class="list-inline-item">Add to <a href="#" data-abc="true">wishlist</a></li>
                                </ul>
                            </div>
                            <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                <h3 class="mb-0 font-weight-semibold">$459.99</h3>
                                <div> <span class="oi oi-star" aria-hidden="true"></span><span class="oi oi-star" aria-hidden="true"></span><span class="oi oi-star" aria-hidden="true"></span><span class="oi oi-star" aria-hidden="true"></span><span class="oi oi-star" aria-hidden="true"></span> </div>
                                <div class="text-muted">1985 reviews</div> <button type="button" class="btn btn-warning mt-4 text-white"><i class="icon-cart-add mr-2"></i> Add to cart</button>
                            </div>
                        </div>
                        <div class="d-flex flex-row-reverse">
                            <ul class="list-inlin align-baseline">
                                <li class="list-inline-item"><span><i class="glyphicon glyphicon-calendar"></i> 2 days, 8 hours </span></li>
                                <li class="list-inline-item">|</li>
                                <span><i class="glyphicon glyphicon-comment"></i> 2 comments</span>
                                <li class="list-inline-item">|</li>
                                <li class="list-inline-item">
                                    <span class="oi oi-star" aria-hidden="true"></span>
                                    <span class="oi oi-star" aria-hidden="true"></span>
                                    <span class="oi oi-star" aria-hidden="true"></span>
                                    <span class="oi oi-star" aria-hidden="true"></span>
                                    <span class="oi oi-star" aria-hidden="true"></span>
                                </li>
                                <li class="list-inline-item">|</li>
                                <li class="list-inline-item">
                                    <span class="icon-facebook"></span>
                                    <span class="icon-twitter"></span>
                                    <span class="icon-instagram"></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

