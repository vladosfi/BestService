@model BestService.Web.ViewModels.SideBar.SideBarCategoriesViewModel
@{
    ViewData["Title"] = "Categories";
}

<h3>@ViewData["Title"]</h3>
<div class="sidebar-box ftco-animate fadeInUp ftco-animated">
    <ul class="categories">
        @{
            foreach (var category in Model.Categories)
            {
                <li><a asp-controller="c" asp-action="@category.Name">@category.Name <span>(@category.Companies.Count)</span></a></li>
            }
        }
    </ul>
</div>