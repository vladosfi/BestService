@model BestService.Web.ViewModels.FooterRecent.FooterRecentCompaniesViewModel
@{
    ViewData["Title"] = "Recent Companies";
}

<div class="col-md-6 col-lg-3">
    <div class="ftco-footer-widget mb-5">
        <h2 class="ftco-heading-2">@ViewData["Title"]</h2>
        @foreach (var company in Model.Companies)
        {
            <div class="block-21 mb-4 d-flex">
                <a class="blog-img mr-4" style="background-image: url(@company.LogoImagePath);"></a>
                <div class="text">
                    <h3 class="heading"><a href="#">@company.Name</a></h3>
                    <div class="meta">
                        <div><a href="#"><span class="icon-calendar"></span> @company.CreatedOn</a></div>
                        <div><a href="#"><span class="icon-person"></span> @company.UserName</a></div>
                        <div><a href="#"><span class="icon-chat"></span> @company.Comments.Count</a></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
