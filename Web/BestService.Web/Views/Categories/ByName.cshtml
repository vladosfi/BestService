@model BestService.Web.ViewModels.Categories.CategoryViewModel
@{
    ViewData["Title"] = @Model.Name;
}


<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">@ViewData["Title"]</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="index.html">Company <i class="ion-ios-arrow-forward"></i></a></span> <span> @ViewData["Title"] <i class="ion-ios-arrow-forward"></i></span></p>
                <p class="text-white">@Model.Description</p>
            </div>
        </div>
    </div>
</section>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var company in Model.Companies)
            {
                <div class="col-md-6 col-lg-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="blog-single.html" class="block-20 d-flex align-items-end" style="background-image: url('../images/image_1.jpg');">
                            <div class="meta-date text-center p-2">
                                <span class="day">26</span>
                                <span class="mos">June</span>
                                <span class="yr">2019</span>
                            </div>
                        </a>
                        <div class="text bg-white p-4">
                            <h3 class="heading"><a href="#">@company.Name</a></h3>
                            <p>@company.ShortDescription</p>
                            <p>Rating: @company.Rating</p>
                            <div class="d-flex align-items-center mt-4">
                                <p class="mb-0"><a href="#" class="btn btn-primary">Read More <span class="ion-ios-arrow-round-forward"></span></a></p>
                                <p class="ml-auto mb-0">
                                    <a href="#" class="mr-2">Admin</a>
                                    <a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        @if (Model.CurrentPage == 1)
                        {
                            <li class="disabled"><a href="#">&lt;</a></li>
                        }
                        else
                        {
                            <li>
                                <a asp-route="bestServiceCategory"
                                   asp-route-name="@Model.Name"
                                   asp-route-page="@(Model.CurrentPage-1)">
                                    &lt;
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.PagesCount; i++)
                        {
                            var active = i == Model.CurrentPage ? "active" : string.Empty;
                            <li class="@active">
                                <a asp-route="bestServiceCategory"
                                   asp-route-name="@Model.Name"
                                   asp-route-page="@i">
                                    @i
                                </a>
                            </li>
                        }
                        @if (Model.CurrentPage == Model.PagesCount)
                        {
                            <li class="disabled"><a href="#">&gt;</a></li>
                        }
                        else
                        {
                            <li>
                                <a asp-route="bestServiceCategory"
                                   asp-route-name="@Model.Name"
                                   asp-route-page="@(Model.CurrentPage+1)">
                                    &gt;
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
