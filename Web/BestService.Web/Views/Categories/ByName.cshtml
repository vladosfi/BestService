@model BestService.Web.ViewModels.Categories.CategoryViewModel
@{
    ViewData["Title"] = @Model.Name;
}

<div class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="media">
                <div class="media-body">
                    <h5 class="mt-0">@Model.Name</h5>
                    @Model.Description
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-8 text-center heading-section ftco-animate">
                <h2 class="mb-4">@Model.Name</h2>
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="row">
            @foreach (var company in Model.Companies)
            {
                <div class="col-md-6 col-lg-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="blog-single.html" class="block-20 d-flex align-items-end" style="background-image: url('../images/image_1.jpg');">
                            <div class="meta-date text-center p-2">
                                <span class="day">26</span>
                                <span class="mos">June</span>
                                <span class="yr">2019</span>
                            </div>
                        </a>
                        <div class="text bg-white p-4">
                            <h3 class="heading"><a href="#">@company.Name</a></h3>
                            <p>@company.ShortDescription</p>
                            <p>Rating: @company.Rating</p>
                            <div class="d-flex align-items-center mt-4">
                                <p class="mb-0"><a href="#" class="btn btn-primary">Read More <span class="ion-ios-arrow-round-forward"></span></a></p>
                                <p class="ml-auto mb-0">
                                    <a href="#" class="mr-2">Admin</a>
                                    <a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
